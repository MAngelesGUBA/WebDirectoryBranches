extends ../../layouts/mainLayout

block content
  section#user-extensions
    h1 Consulta de Extensiones 

    // Barra de búsqueda
    .search-container
      form(method='get').search-form#searchForm
        input(type='text' id='searchInput' name='search' placeholder='Buscar por nombre, área o puesto...')
        button(type='submit' aria-label="Buscar") 
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="30" height="30" fill='#FFFFFF')
            path(d="M18.9,16.776A10.539,10.539,0,1,0,16.776,18.9l5.1,5.1L24,21.88ZM10.5,18A7.5,7.5,0,1,1,18,10.5,7.507,7.507,0,0,1,10.5,18Z")
    // Lista de extensiones existentes con diseño responsivo
    h2#branchSubTitle Sucursal de
    #no-more-tables.data-table
      table
        thead
          tr
            th Nombre
            th Área
            th Puesto
            th Extensión
        tbody#extensionList

  script(src='/assets/js/userExtensions.js')