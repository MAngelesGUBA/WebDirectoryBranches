extends ../layouts/mainLayout

block content
  section#catalogo
    .sucursales 
      h2 Sucursales
      button#branchColima(type='button' aria-label='extensiones de la sucursal Colima')
        img(src='/assets/images/sucursalColima.jpg' alt='Sucursal Colima')
        p Sucursal Colima
      button#branchManzanillo(type='button' aria-label='extensiones de la sucursal Manzanillo')
        img(src='/assets/images/sucursalManza.jpg' alt='Sucursal Manzanillo')
        p Sucursal Manzanillo
      button#branchTecoman(type='button' aria-label='extensiones de la sucursal Tecoman')
        img(src='/assets/images/sucursalTecoman.jpg' alt='Sucursal Tecomán')
        p Sucursal Tecomán
      button#branchVilla(type='button' aria-label='extensiones de la sucursal Villa de Álvarez')
        img(src='/assets/images/sucursalVilla.jpg' alt='Sucursal Villa de Álvarez')
        p Sucursal Villa de Álvarez
      button#branchGuzman(type='button' aria-label='extensiones de la sucursal Guzmán')
        img(src='/assets/images/sucursalGuzman.jpg' alt='Sucursal Guzmán')
        p Sucursal Guzmán
      button#branchAutlan(type='button' aria-label='extensiones de la sucursal Autlán')
        img(src='/assets/images/sucursalAutlan.jpg' alt='Sucursal Autlán')
        p Sucursal Autlán

    .busqueda-sucursales
      h2 Búsqueda global de todas las sucursales
      .search-container
        form(id='frmSearch', method='get')
          input(type='text' id='searchInput' name='search' placeholder='Buscar por nombre, sucursal, área, puesto...')
          button(type='submit' id='btnSearch' aria-label="Buscar") 
            svg(xmlns="http://www.w3.org/2000/svg" id="Isolation_Mode" data-name="Isolation Mode" viewBox="0 0 24 24" width="30" height="30" fill='#FFFFFF')
              path(d="M18.9,16.776A10.539,10.539,0,1,0,16.776,18.9l5.1,5.1L24,21.88ZM10.5,18A7.5,7.5,0,1,1,18,10.5,7.507,7.507,0,0,1,10.5,18Z")
      #no-more-tables.data-table
        table
          thead
            tr
              th Sucursal
              th Correo
              th Nombre
              th Área
              th Puesto
              th Extensión
          tbody#bodyExtensions
        .pages
          button(type='button' aria-label='pagina anterior' id='btnBack')
            <svg xmlns="http://www.w3.org/2000/svg" id="Outline" viewBox="0 0 24 24" width="30" height="30"><path d="M19,11H9l3.29-3.29a1,1,0,0,0,0-1.42,1,1,0,0,0-1.41,0l-4.29,4.3A2,2,0,0,0,6,12H6a2,2,0,0,0,.59,1.4l4.29,4.3a1,1,0,1,0,1.41-1.42L9,13H19a1,1,0,0,0,0-2Z"/></svg>
          label(id='pageIndicator') Página 0 de 0
          button(type='button' aria-label='pagina siguiente' id='btnNext')
            <svg xmlns="http://www.w3.org/2000/svg" id="Outline" viewBox="0 0 24 24" width="30" height="30"><path d="M18,12h0a2,2,0,0,0-.59-1.4l-4.29-4.3a1,1,0,0,0-1.41,0,1,1,0,0,0,0,1.42L15,11H5a1,1,0,0,0,0,2H15l-3.29,3.29a1,1,0,0,0,1.41,1.42l4.29-4.3A2,2,0,0,0,18,12Z"/></svg>

  script(src='/assets/classes/updatePageTableClass.js')
  script(src='/assets/classes/messagesClass.js')
  script(src="/assets/js/home.js") 
